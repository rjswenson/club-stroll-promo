---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "In-person interactive play based on Kansas City's rich history of jazz and nightlife" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #1a1a1a;
    --color-secondary: #f5f5f5;
    --color-accent: #d4af37;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: system-ui, sans-serif;
    background: var(--color-secondary);
    color: var(--color-primary);
  }

  body {
    min-height: 100vh;
  }
</style>
