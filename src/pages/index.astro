---
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoEmbed from '../components/VideoEmbed.astro';
---

<BaseLayout title="Club Stroll | Kansas City Jazz & Nightlife Interactive Play">
  <main>
    <header>
      <h1>Club Stroll</h1>
      <p class="tagline">An Immersive Journey Through Kansas City's Jazz Age</p>
    </header>

    <section class="hero">
      <div class="video-wrapper">
        <VideoEmbed title="Club Stroll Preview" />
      </div>
      <p class="hero-description">
        Step back in time to Kansas City's legendary jazz and nightlife scene
      </p>
    </section>

    <footer>
      <p>&copy; 2026 Club Stroll. A theatrical production celebrating Kansas City's cultural heritage.</p>
    </footer>
  </main>
</BaseLayout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    text-align: center;
    padding: 3rem 0 2rem;
  }

  h1 {
    font-size: 4rem;
    font-weight: 900;
    color: var(--color-accent);
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .tagline {
    font-size: 1.5rem;
    color: #666;
    font-style: italic;
  }

  .hero {
    margin: 3rem 0;
  }

  .video-wrapper {
    max-width: 900px;
    margin: 0 auto 2rem;
  }

  .hero-description {
    text-align: center;
    font-size: 1.25rem;
    color: #666;
    font-style: italic;
    margin-top: 2rem;
  }

  footer {
    text-align: center;
    padding: 3rem 0 2rem;
    color: #666;
    border-top: 1px solid #ddd;
    margin-top: 4rem;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    h1 {
      font-size: 2.5rem;
    }

    .tagline {
      font-size: 1.1rem;
    }

    header {
      padding: 2rem 0 1rem;
    }

    .hero-description {
      font-size: 1rem;
      padding: 0 1rem;
    }
  }
</style>
